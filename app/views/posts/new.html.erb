<%= form_for @post, html: {class:"niftyform"} do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title%>

  <%= f.label :author %>
  <%= f.text_field :author%>

  <%= f.label :post_content%>
  <%= f.text_area :post_content%>

  <%= f.submit "Create Post"%>
<%end%>

